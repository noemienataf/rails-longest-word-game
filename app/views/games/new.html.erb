<ul class="mt-5">
  <% @alphabet.each do |letter| %>
    <li class="d-inline btn btn-primary m-2"><%= letter %></li>
  <% end %>
</ul>

<form action="/score" method="post" data-turbo="false">
  <%= hidden_field_tag :alphabet, @alphabet %>
  <input class ="mot" type="text" name="mot" placeholder="What is the longest word you know?">
  <input type="submit" value ="Play">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
</form>
